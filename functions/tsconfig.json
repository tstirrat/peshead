{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es7",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false
  },
  "exclude": [
    "node_modules",
    "build",
    "jest"
  ]
}
