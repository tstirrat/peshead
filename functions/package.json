{
  "name": "pesto-functions",
  "description": "PESto's Firebase Functions",
  "private": true,
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "scripts": {
    "build": "tsc -p ./",
    "test": "jest",
    "watch": "tsc --watch -p ./",
    "protos": "pbjs -w commonjs -t static-module -o shared/service/api/index.js shared/service/common.proto shared/service/player.proto shared/service/team.proto",
    "api": "yarn run protos; pbts -o shared/service/api/index.d.ts shared/service/api/index.js",
    "deploy": "yarn build && firebase deploy --only functions",
    "cli": "yarn build && node build/cli/index.js"
  },
  "main": "build/index.js",
  "dependencies": {
    "aws-sdk": "^2.224.1",
    "cors": "^2.8.4",
    "elasticsearch": "^14.2.2",
    "express": "^4.16.3",
    "firebase-admin": "^5.12.0",
    "firebase-functions": "^1.0.1",
    "http-aws-es": "^4.0.0",
    "jbinary": "^2.1.3",
    "lodash": "^4.17.5",
    "morgan": "^1.9.0",
    "protobufjs": "^6.8.0"
  },
  "devDependencies": {
    "@firebase/app-types": "^0.1.2",
    "@firebase/database-types": "^0.2.0",
    "@types/elasticsearch": "^5.0.22",
    "@types/fs-extra": "^5.0.2",
    "@types/http-aws-es": "^1.1.3",
    "@types/jbinary": "^0.0.30",
    "@types/jdataview": "^0.0.30",
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.107",
    "@types/morgan": "^1.7.35",
    "fs-extra": "^5.0.0",
    "jest": "^22.4.3",
    "node-bitarray": "^0.1.0",
    "ts-jest": "^22.4.4",
    "typescript": "^2.8.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(-|\\.)test\\.tsx?$",
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!{build,coverage,@types}/**",
      "!service/api/*.{js,jsx,ts,tsx}"
    ]
  }
}
